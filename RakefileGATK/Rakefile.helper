def suffix(objfile, dependency)
  objext = ""
  srcext = ""
  dependency.each do |key, value|
    objext = key
    srcext = value
  end
  objfile.sub(/#{Regexp.escape(objext)}$/, srcext)
end

def suffix_proc(dependency)
  proc {|fn| 
    suffix(fn, dependency)}
end
